<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.agnieszka.kidneyapp20.DetailActivity2$DetailFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView android:layout_width="wrap_content"
        android:id="@+id/detail_text"
        android:layout_height="wrap_content"
        />

        <TextView android:layout_width="wrap_content"
            android:id="@+id/detail_text2"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <Button
            android:text="Delete the meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:backgroundTint="@color/kidney_light_blue"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"/>

        <TextView android:layout_width="wrap_content"
            android:id="@+id/uri_text"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    </LinearLayout>
</ScrollView>