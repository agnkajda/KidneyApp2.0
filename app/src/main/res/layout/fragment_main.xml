<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.agnieszka.kidneyapp20.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dip" >

        <Button
            android:text="Add the meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_food_button"
            android:backgroundTint="@color/kidney_light_blue"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"/>

        <Button
            android:text="Handle SQL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sql_button"
            android:backgroundTint="@color/kidney_light_blue"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"/>

        <Button
            android:text="Delete all records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_all_button"
            android:backgroundTint="@color/kidney_light_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/todays_products"
            android:text="Today's products:"
            android:textSize="26sp"/>

        <ListView
            style="@style/ForecastListStyle"
            android:id="@+id/listview_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/kidney_dark_blue"
            android:dividerHeight="1dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/kidney_dark_blue"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <ListView
            style="@style/ForecastListStyle"
            android:id="@+id/listview_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/kidney_dark_blue"
            android:dividerHeight="1dip"
            android:layout_marginBottom="25dp"/>
</LinearLayout>

    </LinearLayout>

</ScrollView>
